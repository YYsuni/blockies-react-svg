{
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"jsx": "react-jsx",
		"sourceMap": true,
		"declaration": true,
		"baseUrl": ".",
		"declarationDir": "./dist",
		"paths": {
			"tslib": ["./node_modules/tslib/tslib.d.ts"]
		}
	},
	"include": ["./src"],
	"exclude": ["./node_modules", "./test"]
}
